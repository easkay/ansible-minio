{{ minio_log_dir ~ '/' ~ item.stdout_log_name }} {
  daily
  missingok
  rotate 7
  compress
  delaycompress
  notifempty
{# Use copytruncate if not using syslog as minio doesn't support log reloading #}
{% if minio_use_syslog is defined and minio_use_syslog %}
  sharedscripts
  postrotate
    /usr/bin/killall -HUP rsyslogd
  endscript
{% else %}
  copytruncate
{% endif %}
}
